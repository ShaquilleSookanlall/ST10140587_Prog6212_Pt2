@model IEnumerable<ST10140587_Prog6212_Part2.Models.Claim>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pending Claims for Approval</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h2 class="text-center mb-4">Pending Claims for Approval</h2>

        @if (Model != null && Model.Count() > 0)
        {
            <table class="table table-striped table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Lecturer Name</th>
                        <th>Hours Worked</th>
                        <th>Hourly Rate</th>
                        <th>Notes</th>
                        <th>Document</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.LecturerName</td>
                            <td>@claim.HoursWorked</td>
                            <td>@claim.HourlyRate.ToString("C")</td> <!-- Format as currency -->
                            <td>@claim.Notes</td>
                            <td>
                                <a href="@claim.DocumentPath" class="btn btn-link" target="_blank">
                                    View Document
                                </a>
                            </td>
                            <td class="text-center">
                                <form method="post" action="/Claims/ApproveClaim" class="d-inline">
                                    <input type="hidden" name="id" value="@claim.ClaimId" />
                                    <button type="submit" class="btn btn-success btn-sm">
                                        Approve
                                    </button>
                                </form>

                                <form method="post" action="/Claims/RejectClaim" class="d-inline ms-2">
                                    <input type="hidden" name="id" value="@claim.ClaimId" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        Reject
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info text-center">
                No pending claims to display.
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
